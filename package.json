{
  "name": "@datagov-cz/assembly-line-shared",
  "version": "0.3.4",
  "description": "Common front end components for Assembly Line",
  "homepage": "https://github.com/datagov-cz/assembly-line-shared#readme",
  "author": "KODI Team",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement --tsconfig tsconfig.prod.json",
    "watch": "microbundle --jsx React.createElement --tsconfig tsconfig.prod.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagov-cz/assembly-line-shared.git"
  },
  "bugs": {
    "url": "https://github.com/datagov-cz/assembly-line-shared/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "jest": "^27.2.4",
    "microbundle": "^0.14.0",
    "prettier": "^3.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/test/**/*.ts?(x)"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "oidc-client": "^1.11.5",
    "yaml": "^1.10.2"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18.2.0"
  }
}
