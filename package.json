{
  "name": "@opendata-mvcr/assembly-line-shared",
  "version": "0.2.2",
  "description": "Common front end components for Assembly Line",
  "homepage": "https://github.com/opendata-mvcr/assembly-line-shared#readme",
  "author": "KODI Team",
  "license": "MIT",
  "type": "module",
  "source": "src/index.ts",
  "exports": "./dist/index.modern.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement",
    "watch": "microbundle --jsx React.createElement --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendata-mvcr/assembly-line-shared.git"
  },
  "bugs": {
    "url": "https://github.com/opendata-mvcr/assembly-line-shared/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "jest": "^27.0.6",
    "microbundle": "^0.13.3",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/test/**/*.ts?(x)"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "oidc-client": "^1.11.5",
    "yaml": "^1.10.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
